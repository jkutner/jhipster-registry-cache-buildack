#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

# fail fast
set -e

BUILD_DIR=$1
CACHE_DIR=$2

if [ -d $CACHE_DIR/.m2 ] || [ -d $CACHE_DIR/node_modules ]; then
  echo "-----> Cache is already populated. Skipping."
else
  mkdir -p $CACHE_DIR
  echo -n "-----> Priming cache with JHipster dependencies... "
  curl --retry 3 -s -L https://lang-jvm.s3.amazonaws.com/jhipster/cache-primer.tgz | tar xzm -C $CACHE_DIR
  echo "done"
fi
